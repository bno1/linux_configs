{
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "args": ["--background-index", "--clang-tidy", "--header-insertion=never",
                   "--suggest-missing-includes", "--completion-style=detailed"],
            "filetypes": ["c", "cpp", "objc", "objcpp"]
        },
        "haskell": {
            "command": "hie-wrapper",
            "filetypes": ["hs", "lhs", "haskell"],
            "initializationOptions": {
                "languageServerHaskell": {
                    "hlintOn": true
                }
            }
        },
        "ocaml": {
            "module": "/usr/bin/ocaml-language-server",
            "args": ["--node-ipc"],
            "filetypes": ["ocaml", "reason"]
        },
        "typescript": {
            "command": "/usr/bin/typescript-language-server",
            "args": ["--stdio"],
            "filetypes": ["typescript", "typescriptreact"]
        },
        "rls": {
            "command": "/usr/bin/rls",
            "trace.server": "verbose",
            "filetypes": ["rust"],
            "settings": {
                "rust": {
                    "racer_completion": true
                }
            }
        },
        "golang": {
            "command": "gopls",
            "disableWorkspaceFolders": true,
            "filetypes": ["go"],
            "settings": {
                "gopls": {
                    "completeUnimported": true
                }
            }
        }
    }
}
